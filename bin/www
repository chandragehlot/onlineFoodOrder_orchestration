var app = require('../app');
var http = require('http');
const dbConnect = require('../utils/db-connection');

var port = process.env.PORT || 9000;

app.set('port', port);
var server = http.createServer(app);

server.listen(port);
server.on('listening', ()=>{
    const address = server.address();
    dbConnect.connect();
    console.log('server started on', address.port);
});